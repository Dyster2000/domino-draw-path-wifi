<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DominoPathDrawWifiApp.WifiConnectView">

  <FlexLayout x:Name="ConnectBar" Direction="Row" Margin="0,0,0,0" BackgroundColor="Red">
    <Label x:Name="ConnectLabel" VerticalTextAlignment="Center" FlexLayout.Grow="1" Margin="10,0,0,0">Not Connected</Label>
    <Button x:Name="ConnectButton" Text="Connect" Clicked="ConnectButton_Clicked" HorizontalOptions="End" Margin="0,0,10,0" HeightRequest="40" ></Button>
  </FlexLayout>

</ContentView>
