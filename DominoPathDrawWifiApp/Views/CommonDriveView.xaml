<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DominoPathDrawWifiApp.CommonDriveView">
  <VerticalStackLayout>

    <Button x:Name="MoveButton" Text="Stopped" Clicked="MoveButton_Clicked" Margin="30,0,30,10" BackgroundColor="Red"></Button>
    <Button x:Name="DispenseButton" Text="Dispense Dominoes - On" Clicked="DispenseButton_Clicked" Margin="30,10,30,10" BackgroundColor="Green"></Button>
    <HorizontalStackLayout Margin="30,10,30,10">
      <CheckBox x:Name="StopOnEmpty" IsChecked="True" CheckedChanged="StopOnEmpty_CheckedChanged"></CheckBox>
      <Label VerticalTextAlignment="Center">Stop when dominoes tray is empty</Label>
    </HorizontalStackLayout>

  </VerticalStackLayout>
</ContentView>
